<h1>Listing Items for <%=@bucket.name%></h1>
<ul>
  <% @items.each do |item| %>
    <li>
      <%=item.content%> 
      <%= link_to 'edit', edit_item_path(item) %>
      <%= link_to 'delete', item, :method=>'delete', :confirm=>'Are you sure?' %>
    </li>
  <% end %>
</ul>
<%=link_to "New Item", new_bucket_item_path %>
